@model IEnumerable<CourseWork.Models.Data.ResidenceDTO>

@{
    ViewBag.Title = "Index";
}


<h2>Residence Table</h2>

<p>
    @Html.ActionLink("Add New Residence", "Create", "", new { @class = "btn btn-success" })
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Rooms.RoomID)
        </th>
        <th>
            Username
        </th>
        <th>
            @Html.DisplayNameFor(model => model.StartDate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.EndDate)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Rooms.RoomID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Users.Username)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.StartDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EndDate)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.ResidenceID }) |
                @Html.ActionLink("Details", "Details", new { id = item.ResidenceID }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.ResidenceID })
            </td>
        </tr>
    }

</table>
